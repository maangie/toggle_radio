<%= simple_form_for(@sale) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :radio_value %>
    <%= f.input :toggle_flag_1 %>
    <%= f.input :toggle_flag_2 %>
    <%= f.input :toggle_flag_3 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
